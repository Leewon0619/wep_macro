<Window x:Class="WepMacroApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wep Macro" Height="720" Width="1100">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <DockPanel Grid.Row="0" Margin="0,0,0,8">
      <TextBlock Text="Wep Macro" FontSize="20" FontWeight="Bold" DockPanel.Dock="Left" />
      <TextBlock Text="Ready" x:Name="StatusText" HorizontalAlignment="Right" DockPanel.Dock="Right" />
    </DockPanel>

    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
      <Button x:Name="OnOffButton" Width="90" Margin="0,0,8,0" Content="On" Click="OnOff_Click" />
      <Button x:Name="EditButton" Width="90" Margin="0,0,8,0" Content="Edit" Click="Edit_Click" />
      <Button x:Name="RecordButton" Width="90" Margin="0,0,8,0" Content="Record" Click="Record_Click" />
      <Button x:Name="RunButton" Width="90" Margin="0,0,8,0" Content="Run" Click="Run_Click" />
      <Button Width="90" Margin="0,0,8,0" Content="Add Macro" Click="AddMacro_Click" />
      <Button Width="90" Content="Delete Macro" Click="DeleteMacro_Click" />
    </StackPanel>

    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*" />
        <ColumnDefinition Width="2*" />
        <ColumnDefinition Width="3*" />
      </Grid.ColumnDefinitions>

      <GroupBox Header="Macros" Grid.Column="0" Margin="0,0,8,0">
        <DockPanel>
          <ListBox x:Name="MacroList" SelectionChanged="MacroList_SelectionChanged" />
        </DockPanel>
      </GroupBox>

      <StackPanel Grid.Column="1" Margin="0,0,8,0">
        <GroupBox Header="Recording" Margin="0,0,0,8">
          <StackPanel Margin="8">
            <TextBlock x:Name="RecordStateText" Text="Idle" />
            <TextBlock x:Name="EventCountText" Text="Events: 0" />
            <TextBlock x:Name="RunTimeText" Text="Run Time: 00:00.000" />
          </StackPanel>
        </GroupBox>

        <GroupBox Header="Macro Actions" Margin="0,0,0,8">
          <StackPanel Margin="8">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
              <TextBlock Text="Repeat Count" Width="120" />
              <TextBox x:Name="RepeatCountBox" Width="80" Text="1" LostFocus="RepeatCount_LostFocus" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
              <TextBlock Text="Coord Mode" Width="120" />
              <TextBlock x:Name="CoordModeText" Text="Off" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
              <TextBlock Text="Log Mode" Width="120" />
              <TextBlock x:Name="LogModeText" Text="Off" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
              <Button x:Name="CoordModeButton" Content="Coord Mode" Width="110" Margin="0,0,8,0" Click="CoordMode_Click" />
              <Button x:Name="LogModeButton" Content="Log Mode" Width="110" Click="LogMode_Click" />
            </StackPanel>
          </StackPanel>
        </GroupBox>

        <GroupBox Header="Manual Macro">
          <StackPanel Margin="8">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
              <TextBlock Text="X (Manual)" Width="100" />
              <TextBox x:Name="ManualXBox" Width="80" />
              <TextBlock Text="Y (Manual)" Width="100" Margin="12,0,0,0" />
              <TextBox x:Name="ManualYBox" Width="80" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
              <TextBlock Text="X (Coord)" Width="100" />
              <TextBox x:Name="CoordXBox" Width="80" IsReadOnly="True" />
              <TextBlock Text="Y (Coord)" Width="100" Margin="12,0,0,0" />
              <TextBox x:Name="CoordYBox" Width="80" IsReadOnly="True" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
              <TextBlock Text="Action" Width="100" />
              <ComboBox x:Name="ManualActionBox" Width="120">
                <ComboBoxItem Content="Mouse Down" Tag="MouseDown" />
                <ComboBoxItem Content="Mouse Up" Tag="MouseUp" />
                <ComboBoxItem Content="Click" Tag="Click" />
              </ComboBox>
              <Button Content="Add Event" Margin="12,0,0,0" Click="AddEvent_Click" />
            </StackPanel>
          </StackPanel>
        </GroupBox>
      </StackPanel>

      <GroupBox Header="Log Mode" Grid.Column="2">
        <DockPanel Margin="8">
          <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <Button Content="Clear Log" Click="ClearLog_Click" Width="100" />
          </StackPanel>
          <TextBox x:Name="LogOutput" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
        </DockPanel>
      </GroupBox>
    </Grid>

    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button Content="Save .m" Width="100" Margin="0,0,8,0" Click="SaveMacro_Click" />
      <Button Content="Load .m" Width="100" Margin="0,0,8,0" Click="LoadMacro_Click" />
      <Button Content="Save wep_macro.ini" Width="140" Margin="0,0,8,0" Click="SaveIni_Click" />
      <Button Content="Load wep_macro.ini" Width="140" Click="LoadIni_Click" />
    </StackPanel>
  </Grid>
</Window>
